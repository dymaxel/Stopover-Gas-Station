<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="nozzle_salesperson_tree" model="ir.ui.view">
        <field name="name">nozzle.salesperson.tree</field>
        <field name="model">nozzle.salesperson</field>
        <field name="arch" type="xml">
            <tree string="Nozzle Sales Person">
                <field name="branch_id"/>
            </tree>
        </field>
    </record>
    <record id="nozzle_salesperson_form" model="ir.ui.view">
        <field name="name">nozzle.salesperson.form</field>
        <field name="model">nozzle.salesperson</field>
        <field name="arch" type="xml">
            <form string="Nozzle Sales Person">
                <sheet>
                    <group>
                        <group>
                            <field name="branch_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Details">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="nozzle_id"/>
                                    <field name="salesperson_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_nozzle_salesperson" model="ir.actions.act_window">
        <field name="name">Nozzle Sales Person</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">nozzle.salesperson</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                No orders found
            </p>
            <p>
                To nozzle sales person record.
            </p>
        </field>
    </record>

    <menuitem
            id="menu_nozzle_salesperson"
            name="Nozzle Sales Person"
            parent="menu_sub_configuration"
            action="action_nozzle_salesperson"
            sequence="50"/>
</odoo>
