<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="nozzle_dip_reading_tree" model="ir.ui.view">
        <field name="name">nozzle.dip.reading.tree</field>
        <field name="model">nozzle.dip.reading</field>
        <field name="arch" type="xml">
            <tree string="Nozzle Dip Reading">
                <field name="name"/>
                <field name="branch_id"/>
                <field name="opening_date"/>
                <field name="closing_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record id="nozzle_dip_reading_form" model="ir.ui.view">
        <field name="name">nozzle.dip.reading.form</field>
        <field name="model">nozzle.dip.reading</field>
        <field name="arch" type="xml">
            <form string="Nozzle Dip Reading">
                <header>
                    <button name="action_running" string="Running" states="draft" type="object" class="btn-primary"/>
                    <button name="action_validate" string="Validate" states="running" type="object" class="btn-primary"/>
                    <button name="action_approve" string="Approve" states="submit" type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,running,submit,posted"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nozzle Dip Reading" nolabel="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="branch_id"/>
                            <field name="opening_date"/>
                            <field name="closing_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Details">
                            <field name="reading_lines">
                                <tree editable="bottom">
                                    <field name="nozzle_id"  domain="[('branch_id', '=', parent.branch_id)]"/>
                                    <field name="location_id" domain="[('branch_id', '=', parent.branch_id), ('is_tank', '=', True), ('product_id', '!=', False)]"/>
                                    <field name="product_id"/>
                                    <field name="opening_reading"/>
                                    <field name="sale_qty" force_save="1"/>
                                    <field name="closing_reading"/>
                                    <field name="physical_reading"/>
                                    <field name="variance"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_nozzle_dip_reading" model="ir.actions.act_window">
        <field name="name">Meter Reading</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">nozzle.dip.reading</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                No orders found
            </p>
            <p>
                To record nozzle dip reading record.
            </p>
        </field>
    </record>

    <menuitem
            id="menu_nozzle_dip_reading"
            name="Meter Readings"
            parent="menu_sub_readings"
            action="action_nozzle_dip_reading"
            sequence="20"/>
</odoo>
