<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tank_nozzle_tree" model="ir.ui.view">
        <field name="name">tank.nozzle.tree</field>
        <field name="model">tank.nozzle</field>
        <field name="arch" type="xml">
            <tree string="Nozzle">
                <field name="name"/>
                <field name="tank_name"/>
                <field name="tank_code"/>
                <field name="branch_id"/>
                <field name="product_id"/>
            </tree>
        </field>
    </record>
    <record id="tank_nozzle_form" model="ir.ui.view">
        <field name="name">tank.nozzle.form</field>
        <field name="model">tank.nozzle</field>
        <field name="arch" type="xml">
            <form string="Nozzles">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nozzle Name.." nolabel="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="location_id"/>
                            <field name="tank_code"/>
                            <field name="branch_id"/>
                            <field name="product_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_tank_nozzle" model="ir.actions.act_window">
        <field name="name">Nozzle</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tank.nozzle</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                No orders found
            </p>
            <p>
                To nozzle record.
            </p>
        </field>
    </record>

    <menuitem
            id="menu_tank_nozzle"
            name="Nozzle"
            parent="menu_sub_configuration"
            action="action_tank_nozzle"
            sequence="30"/>
</odoo>
