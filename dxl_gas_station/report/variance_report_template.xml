<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="variance_report_template">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="text-center">
                        <h4 style="font-weight:600;">Variance Consolidated Report</h4>
                    </div>
                    <div class="page">
                        <div class="oe_structure"/>
                        <div class="row mt32 mb32" id="informations">
                            <div  class="col-auto col-3 mw-100 mb-2">
                                <strong>From Date:</strong>
                                <p class="m-0" t-esc="date_from"/>
                            </div>
                            <div class="col-auto col-3 mw-100 mb-2">
                                <strong>To Date:</strong>
                                <p class="m-0" t-esc="date_to"/>
                            </div>
                            <div class="col-auto col-3 mw-100 mb-2">
                                <strong>Branch:</strong>
                                <p class="m-0" t-esc="branch"/>
                            </div>
                        </div>
                        <t t-foreach="product_ids" t-as="product_id">
                            <t t-if="product_wise_data[product_id]">
                                <table class="table table-sm o_main_table">
                                    <thead style="display: table-row-group">
                                        <tr>
                                            <th>Date</th>
                                            <th class="text-left">Tanks</th>
                                            <th class="text-left">Product</th>
                                            <th class="text-right">Opening Stock</th>
                                            <th class="text-right">Purchase</th>
                                            <th class="text-right">Sale</th>
                                            <th class="text-right">Dip Reading</th>
                                            <th class="text-right">Meter Reading</th>
                                            <th class="text-right">Adjustments</th>
                                            <th class="text-right">On Hand Qty</th>
                                        </tr>
                                    </thead>
                                    <t t-set="total_dip_reading" t-value="0"/>
                                    <t t-set="total_meter_reading" t-value="0"/>
                                    <tbody class="sale_tbody">
                                        <tr t-foreach="product_wise_data[product_id]" t-as="line">
                                            <td class="text-left"><span t-esc="line['date']"/></td>
                                            <td class="text-left"><span t-esc="line['location']"/></td>
                                            <td class="text-left"><span t-esc="line['product']"/></td>
                                            <td class="text-right"><span t-esc="line['opening_stock']"/></td>
                                            <td class="text-right"><span t-esc="line['purchase']"/></td>
                                            <td class="text-right"><span t-esc="line['sale']"/></td>
                                            <td class="text-right"><span t-esc="line['dip_reading']"/></td>
                                            <td class="text-right"><span t-esc="line['meter_reading']"/></td>
                                            <td class="text-right"><span t-esc="line['adjustment']"/></td>
                                            <td class="text-right"><span t-esc="line['onhand']"/></td>
                                        </tr>
                                        <t t-set="total_dip_reading" t-value="total_dip_reading + line['dip_reading']"/>
                                        <t t-set="total_meter_reading" t-value="total_meter_reading + line['meter_reading']"/>
                                    </tbody>
                                    <tr>
                                        <td class="text-right" colspan="6">
                                            <strong>Total Varainace</strong>
                                        </td>
                                        <td class="text-right">
                                            <strong>
                                                <span t-esc="round(total_dip_reading, 2)"/>
                                            </strong>
                                        </td>
                                        <td class="text-right">
                                            <strong>
                                                <span t-esc="round(total_meter_reading, 2)"/>
                                            </strong>
                                        </td>
                                        <td/>
                                        <td/>
                                    </tr>
                                </table>
                            </t>
                        </t>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
