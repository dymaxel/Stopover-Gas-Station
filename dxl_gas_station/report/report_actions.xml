<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="st_paperformat_euro_lowmargin" model="report.paperformat">
            <field name="name">Gas Variance Reports</field>
            <field eval="True" name="default"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">35</field>
            <field name="margin_bottom">20</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field eval="False" name="header_line"/>
            <field name="header_spacing">25</field>
            <field name="dpi">90</field>
        </record>
        <record id="variance_report" model="ir.actions.report">
            <field name="name">Tank Report</field>
            <field name="model">variance.report.wizard</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">dxl_gas_station.variance_report_template</field>
            <field name="report_file">dxl_gas_station.variance_report_template</field>
            <field name="binding_model_id" ref="dxl_gas_station.model_variance_report_wizard"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="dxl_gas_station.st_paperformat_euro_lowmargin"/>
        </record>

         <record id="nozzle_report" model="ir.actions.report">
            <field name="name">Daily Summary Of Fuel Pump</field>
            <field name="model">nozzle.report.wizard</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">dxl_gas_station.nozzle_report_template</field>
            <field name="report_file">dxl_gas_station.nozzle_report_template</field>
            <field name="binding_model_id" ref="dxl_gas_station.model_nozzle_report_wizard"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="dxl_gas_station.st_paperformat_euro_lowmargin"/>
        </record>

    </data>
</odoo>
